<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="in.codingninjas.cn.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="0dp"
    android:layout_alignParentTop="true"
    android:id="@+id/topllinear">
<ImageView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="200dp"
    android:scaleType="fitXY"
    android:id="@+id/constantimage1" />
<ImageView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="200dp"
    android:scaleType="fitXY"
    android:id="@+id/constantimage2" />


</LinearLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/sortinformation_textview"
      android:text="TOP MOVIES"
      android:textColor="#4A148C"
      android:background="#F3E5F5"


      android:textAlignment="center"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/topllinear"
      style="@android:style/TextAppearance.Holo.Medium"
      android:textSize="45dp"/>

  <GridView
      android:id="@+id/main_activity_movieGridView"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:layout_marginTop="30dp"
      android:layout_below="@+id/sortinformation_textview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:columnWidth="0dp"
      android:numColumns="auto_fit"
      android:horizontalSpacing="10dp"
      android:stretchMode="columnWidth"
      android:gravity="center">
  </GridView>
</RelativeLayout>
